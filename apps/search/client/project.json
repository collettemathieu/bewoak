{
    "$schema": "../../../node_modules/nx/schemas/project-schema.json",
    "name": "search-client",
    "prefix": "app",
    "projectType": "application",
    "sourceRoot": "apps/search/client/src",
    "tags": ["search-client"],
    "targets": {
        "build": {
            "configurations": {
                "development": {
                    "extractLicenses": false,
                    "optimization": false,
                    "sourceMap": true
                },
                "production": {
                    "budgets": [
                        {
                            "maximumError": "1mb",
                            "maximumWarning": "500kb",
                            "type": "initial"
                        },
                        {
                            "maximumError": "8kb",
                            "maximumWarning": "4kb",
                            "type": "anyComponentStyle"
                        }
                    ],
                    "outputHashing": "all"
                }
            },
            "defaultConfiguration": "production",
            "executor": "@angular/build:application",
            "options": {
                "assets": [
                    {
                        "glob": "**/*",
                        "input": "apps/search/client/public"
                    }
                ],
                "browser": "apps/search/client/src/main.ts",
                "inlineStyleLanguage": "scss",
                "outputMode": "server",
                "outputPath": "dist/apps/search/client",
                "polyfills": ["zone.js"],
                "server": "apps/search/client/src/main.server.ts",
                "ssr": {
                    "entry": "apps/search/client/src/server.ts"
                },
                "styles": ["apps/search/client/src/styles.scss"],
                "tsConfig": "apps/search/client/tsconfig.app.json"
            },
            "outputs": ["{options.outputPath}"]
        },
        "extract-i18n": {
            "executor": "@angular/build:extract-i18n",
            "options": {
                "buildTarget": "search-client:build"
            }
        },
        "serve": {
            "configurations": {
                "development": {
                    "buildTarget": "search-client:build:development"
                },
                "production": {
                    "buildTarget": "search-client:build:production"
                }
            },
            "continuous": true,
            "defaultConfiguration": "development",
            "executor": "@angular/build:dev-server"
        },
        "serve-static": {
            "continuous": true,
            "executor": "@nx/web:file-server",
            "options": {
                "buildTarget": "search-client:build",
                "port": 4200,
                "spa": true,
                "staticFilePath": "dist/apps/search/client/browser"
            }
        },
        "test-e2e": {
            "executor": "nx:run-commands",
            "options": {
                "command": "bash {projectRoot}/run-e2e-testing.sh"
            }
        }
    }
}
