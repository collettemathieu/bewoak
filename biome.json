{
    "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
    "formatter": {
        "attributePosition": "auto",
        "enabled": true,
        "formatWithErrors": false,
        "ignore": [".angular", ".detective", ".nx", ".vscode", "coverage", "dist", "node_modules", "reports", "tmp"],
        "indentStyle": "space",
        "indentWidth": 4,
        "lineEnding": "lf",
        "lineWidth": 130
    },
    "javascript": {
        "formatter": {
            "arrowParentheses": "always",
            "attributePosition": "auto",
            "bracketSameLine": false,
            "bracketSpacing": true,
            "jsxQuoteStyle": "double",
            "quoteProperties": "asNeeded",
            "quoteStyle": "single",
            "semicolons": "always",
            "trailingCommas": "es5"
        },
        "linter": {
            "enabled": true
        },
        "parser": {
            "unsafeParameterDecoratorsEnabled": true
        }
    },
    "json": {
        "parser": {
            "allowComments": false,
            "allowTrailingCommas": true
        }
    },
    "linter": {
        "enabled": true,
        "ignore": ["dist", "coverage", ".nx", ".vscode", "node_modules", "tmp", ".angular"],
        "rules": {
            "complexity": {
                "noForEach": "off"
            },
            "correctness": {
                "noUnusedVariables": {
                    "fix": "none",
                    "level": "error"
                },
                "noVoidTypeReturn": {
                    "level": "error"
                }
            },
            "recommended": true,
            "suspicious": {
                "noConsoleLog": "error"
            }
        }
    },
    "organizeImports": {
        "enabled": true
    }
}
