        "@nx/web": "21.6.3",
        "@nx/webpack": "21.6.3",
        "@nx/workspace": "21.6.3",
        "@softarc/detective": "1.0.3",
        "@stryker-mutator/core": "8.7.1",
        "@swc-node/register": "1.9.1",
        "@swc/cli": "0.6.0",
