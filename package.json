        "@types/sinon": "17.0.3",
        "@types/supertest": "6.0.2",
        "autocannon": "8.0.0",
        "bun-types": "1.2.2",
        "chokidar": "3.6.0",
        "commitlint": "19.3.0",
        "cucumber-tsflow": "4.4.4",
        "nx": "21.6.3",
        "sinon": "21.0.0",
        "stryker-cli": "1.1.0",
        "supertest": "7.1.4",
        "swc-loader": "0.2.6",
        "ts-node": "^10.9.2",
        "typescript": "5.9.3",
        "verdaccio": "6.2.0",
        "webpack-cli": "6.0.1"
    },
    "license": "MIT",
    "name": "bewoak",
    "nx": {
        "includedScripts": []
    },
    "private": true,
    "scripts": {
        "build": "nx run-many --target=build --parallel=4",
        "format": "biome format --write",
        "format:check": "biome format",
        "lint": "nx run-many --target=lint --parallel=4",
        "nx": "nx",
        "postinstall": "chmod +x .hooks/* && git config core.hooksPath .hooks",
        "start:pathway-design:app": "PORT=3000 GLOBAL_PREFIX=api PERSISTENCE_DRIVER=inMemory PRESENTER_DRIVER=toJson nx serve pathway-design-server",
        "start:search:app": "PORT=3000 GLOBAL_PREFIX=api nx serve search-server",
        "stryker": "stryker",
        "test": "rm -rf dist && rm -rf reports && bun run nx reset && bun run test:ci",
        "test:ci": "bun run test:unit && bun run test:feature && bun run lint && bun run format && bun run build",
        "test:feature": "nx run-many --target=test-feature --parallel=4",
        "test:load-testing": "nx run-many --target=load-testing --output-style=static",
        "test:mutation": "nx run-many --target=test-mutation --parallel=4",
        "test:unit": "nx run-many --target=test --parallel=4",
        "tools:autocanon": "autocannon -c 10 -d 10s http://localhost:3000/api/pathway/initialize",
        "tools:detective": "detective",
        "tools:otel:run": "docker compose -f ./docker/otel-instrumentation/docker-compose.yml up"
    },
    "version": "0.0.1"
}
