{
    "$schema": "../../../../node_modules/nx/schemas/project-schema.json",
    "name": "common-http-exceptions-server",
    "projectType": "library",
    "release": {
        "version": {
            "currentVersionResolver": "git-tag",
            "manifestRootsToUpdate": ["dist/{projectRoot}"],
            "preserveLocalDependencyProtocols": false
        }
    },
    "sourceRoot": "libs/common/http-exceptions/server/src",
    "tags": ["type:common:http-exceptions:server"],
    "targets": {
        "build": {
            "executor": "@nx/js:swc",
            "options": {
                "assets": [],
                "main": "libs/common/http-exceptions/server/src/index.ts",
                "outputPath": "dist/libs/common/http-exceptions/server",
                "tsConfig": "libs/common/http-exceptions/server/tsconfig.lib.json"
            },
            "outputs": ["{options.outputPath}"]
        },
        "nx-release-publish": {
            "options": {
                "packageRoot": "dist/{projectRoot}"
            }
        }
    }
}
