{
    "name": "common-types-result",
    "$schema": "../../../../node_modules/nx/schemas/project-schema.json",
    "sourceRoot": "libs/common/types/result/src",
    "projectType": "library",
    "targets": {
        "build": {
            "executor": "@nx/js:swc",
            "outputs": ["{options.outputPath}"],
            "options": {
                "outputPath": "dist/libs/common/types/result",
                "main": "libs/common/types/result/src/index.ts",
                "tsConfig": "libs/common/types/result/tsconfig.lib.json",
                "assets": []
            }
        },
        "nx-release-publish": {
            "options": {
                "packageRoot": "dist/{projectRoot}"
            }
        },
        "lint": {
            "executor": "nx:run-commands",
            "options": {
                "command": "bun run biome check --write {projectRoot}"
            }
        }
    },
    "tags": ["type:common:types:result"],
    "release": {
        "version": {
            "currentVersionResolver": "git-tag",
            "preserveLocalDependencyProtocols": false,
            "manifestRootsToUpdate": ["dist/{projectRoot}"]
        }
    }
}
