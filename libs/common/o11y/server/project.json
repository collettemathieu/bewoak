{
    "$schema": "../../../../node_modules/nx/schemas/project-schema.json",
    "name": "common-o11y-server",
    "projectType": "library",
    "release": {
        "version": {
            "currentVersionResolver": "git-tag",
            "manifestRootsToUpdate": ["dist/{projectRoot}"],
            "preserveLocalDependencyProtocols": false
        }
    },
    "sourceRoot": "libs/common/o11y/server/src",
    "tags": ["type:common:configs:server:o11y"],
    "targets": {
        "build": {
            "executor": "@nx/js:swc",
            "options": {
                "assets": [],
                "main": "libs/common/o11y/server/src/index.ts",
                "outputPath": "dist/libs/common/o11y/server",
                "tsConfig": "libs/common/o11y/server/tsconfig.lib.json"
            },
            "outputs": ["{options.outputPath}"]
        },
        "nx-release-publish": {
            "options": {
                "packageRoot": "dist/{projectRoot}"
            }
        },
        "test": {
            "executor": "nx:run-commands",
            "options": {
                "command": "bun test --coverage --coverage-dir=dist/reports/{projectRoot}/coverage --coverage-reporter=lcov {projectRoot}"
            }
        },
        "test-mutation": {
            "executor": "nx:run-commands",
            "options": {
                "command": "bun run stryker run {projectRoot}/stryker.config.json && bunx lite-server --baseDir=reports/test-mutation/{projectRoot}"
            }
        }
    }
}
