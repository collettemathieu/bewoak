{
    "compileOnSave": false,
    "compilerOptions": {
        "baseUrl": ".",
        "declaration": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "importHelpers": true,
        "inlineSources": true,
        "lib": ["es2022", "dom"],
        "module": "esnext",
        "moduleResolution": "node",
        "noEmitOnError": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "paths": {
            "@bewoak/common-configs-server-env": ["libs/common/configs/server/env/src/index.ts"],
            "@bewoak/common-configs-server-otel": ["libs/common/configs/server/otel/src/index.ts"],
            "@bewoak/common-configs-server-swagger": ["libs/common/configs/server/swagger/src/index.ts"],
            "@bewoak/common-contracts-events-pathway": ["libs/common/contracts/events/pathway/src/index.ts"],
            "@bewoak/common-events": ["libs/common/events/src/index.ts"],
            "@bewoak/common-http-exceptions-server": ["libs/common/http-exceptions/server/src/index.ts"],
            "@bewoak/common-interceptors-server": ["libs/common/interceptors/server/src/index.ts"],
            "@bewoak/common-log-server": ["libs/common/log/server/src/index.ts"],
            "@bewoak/common-types-result": ["libs/common/types/result/src/index.ts"],
            "@bewoak/pathway-design-common-pathway-business-rules": [
                "libs/pathway-design/common/pathway/business/rules/src/index.ts"
            ],
            "@bewoak/pathway-design-server-pathway-application": ["libs/pathway-design/server/pathway/application/src/index.ts"],
            "@bewoak/pathway-design-server-pathway-business": ["libs/pathway-design/server/pathway/business/src/index.ts"],
            "@bewoak/pathway-design-server-pathway-infrastructure": [
                "libs/pathway-design/server/pathway/infrastructure/src/index.ts"
            ],
            "@bewoak/pathway-design-server-pathway-interface-adapters": [
                "libs/pathway-design/server/pathway/interface-adapters/src/index.ts"
            ],
            "@bewoak/pathway-design-server-pathway-presenters": ["libs/pathway-design/server/pathway/presenters/src/index.ts"],
            "@bewoak/search-server-pathway-application": ["libs/search/server/pathway/application/src/index.ts"],
            "@bewoak/search-server-pathway-infrastructure": ["libs/search/server/pathway/infrastructure/src/index.ts"],
            "@bewoak/search-server-pathway-models": ["libs/search/server/pathway/models/src/index.ts"]
        },
        "rootDir": ".",
        "skipDefaultLibCheck": true,
        "skipLibCheck": true,
        "sourceMap": true,
        "target": "es2022"
    },
    "exclude": [
        ".angular",
        ".git",
        ".github",
        ".hooks",
        ".nx",
        ".verdaccio",
        ".vscode",
        "coverage",
        "dist",
        "node_modules",
        "tmp"
    ]
}
